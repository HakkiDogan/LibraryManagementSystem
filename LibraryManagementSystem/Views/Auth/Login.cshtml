<body>
    <h1>Kütüphane Yönetim Sistemi</h1>
    <div class=" w3l-login-form">
        <h2>Giriş Yap</h2>
            @using (Html.BeginForm("Login","Auth",FormMethod.Post)){
            <div class=" w3l-form-group">
                <label>Kullanıcı E-posta:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" name="Mail" placeholder="Kullanıcı E-posta" required="required" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Şifre:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" name="Password" placeholder="Şifre" required="required" />
                </div>
            </div>
            @*<div class="forgot">
                <a href="#">Forgot Password?</a>
                <p><input type="checkbox">Remember Me</p>
            </div>*@
            <button type="submit">Giriş Yap</button>
            }
            <div class="form-group d-md-flex">
            <div class="w-50" style="margin-top:10px">
                <a href="/auth/AdminLogin" class="register" style="margin-right:125px"> Admin Giriş</a>
                Bir hesabın var mı?<a href="/auth/register" class="register"> Kayıt ol</a>
            </div>
        </div>
       @* <p class=" w3l-register-p"><a href="/auth/AdminLogin" class="register"> Admin Giriş</a></p>
        <p class=" w3l-register-p">Bir hesabın var mı?<a href="/auth/register" class="register"> Kayıt ol</a></p>*@
    </div>
    <footer>
        <p class="copyright-agileinfo"> © 2023 Tüm hakları saklıdır</p>
    </footer>

</body>

</html>
