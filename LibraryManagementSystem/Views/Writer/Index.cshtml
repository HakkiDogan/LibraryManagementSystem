@using EntityLayer.Concrete
@model List<Writer>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/Layout.cshtml";
}

<h1>Yazarlar</h1>

<table class="table table-striped">
	<tr style="background-color:rgb(252,178,22)">
		<th>ID</th>
		<th>Ad</th>
		<th>Soyad</th>
		<th width="650">Detay</th>
		<th>Sil</th>
		<th>Güncelle</th>
		<th>Yazarın Kitapları</th>
	</tr>
	@foreach (var w in Model)
	{
		<tr>
			<td>@w.WriterId</td>
			<td>@w.Name</td>
			<td>@w.Surname</td>
			<td>@w.Detail</td>
			<td>
				@Html.ActionLink("Sil","RemoveWriter", new {id=w.WriterId} ,
			new {@class="btn btn-danger", onclick="return confirm('Yazarı silmek istiyor musunuz?')"})
			</td>
			<td><a href="/Writer/UpdateWriter/@w.WriterId" class="btn btn-warning">Güncelle</a></td>
			<td><a href="/Writer/WriterBooks/@w.WriterId" class="btn btn-default" style="background-color:lightseagreen">Yazarın Kitapları</a></td>
		</tr>
	}

</table>
<a href="/Writer/AddWriter" class="btn btn-primary">Yeni Yazar Ekle</a>
