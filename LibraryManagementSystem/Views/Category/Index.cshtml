@using EntityLayer.Concrete
@model List<Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}



<h1>Kategoriler</h1>

<table class="table table-bordered">
    <tr>
        <th>Kategori ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var c in Model)
    {
        <tr>
            <td>@c.CategoryId</td>
            <td>@c.Name</td>
            <td><a href="/Category/RemoveCategory/@c.CategoryId" class="btn btn-danger ">Sil</a></td>
            <td><a href="/Category/GetCategory/@c.CategoryId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Category/AddCategory" class="btn btn-primary">Yeni Kategori Ekle</a>
