@model EntityLayer.Concrete.BookTransaction
@{
	ViewData["Title"] = "BookReturn";
	Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post" style="margin:15px">
	<div style="margin-top:15px">
		<label>Hareket ID</label>
		@Html.TextBoxFor(m => m.BookTransactionId, new { @class = "form-control" , @readonly = "readonly" })
	</div>
	<div style ="margin-top:15px">
		<label>Üye Adı</label>
		@{
			var memberFullName = Model.Member.Name + " " + Model.Member.Surname;
		}
		@Html.TextBoxFor(m => memberFullName, new { @class = "form-control" , @readonly = "readonly" })
	</div>
	<div style="margin-top:15px">
		<label>Kitap Adı</label>

		@Html.TextBoxFor(b => b.Book.Name,new {@class= "form-control", @readonly = "readonly" } )
	</div>
	<div style="margin-top:15px">
		<label>Personel Adı</label>
		@Html.TextBoxFor(s => s.Staff.Name,new {@class= "form-control", @readonly = "readonly" } )
	</div>
	<div style="margin-top:15px">
		<label>Kitap Alış Tarihi</label>
		@Html.TextBoxFor(s => s.IssueDate,"{0: dd.MM.yyyy}",new {@class= "form-control", @readonly = "readonly" } )
	</div>
	<div style="margin-top:15px">
		<label>Kitap İade Tarihi</label>
		@Html.TextBoxFor(s => s.ReturnDate,"{0: dd.MM.yyyy}",new {@class= "form-control", @readonly = "readonly" } )
	</div>
	<div style="margin-top:15px">
		<label>Üyenin Getirdiği Tarihi</label>
		<input type="text" class="form-control" name="MemberReturnDate" value="@DateTime.Now.ToShortDateString()" readonly />
	</div>

	@{
		if (ViewBag.PunishmentPrice > 0)
		{
			<label style="margin-top:15px">Kitap Geç Teslim Tutar</label>
			<input type="text" class="form-control" id="Gecinput" value="@ViewBag.PunishmentPrice ₺" readonly />
		}
	}

	<div style="margin-top:15px">
		<button class="btn btn-group" style="background-color:#64d8ca; color:white" id="Btn1">Ödünç Kitabı Geri Al</button>
	</div>
</form>

